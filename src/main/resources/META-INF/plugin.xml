<idea-plugin>
    <id>com.github.lambdamix.intellij-elambda</id>
    <name>Elambda (Extended Lambda Calculus) Language</name>
    <vendor>https://github.com/ilya-klyuchnikov/intellij-elambda</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="elambda"
                  implementationClass="com.github.lambdamix.elambda.ELambdaFileType"
                  fieldName="INSTANCE"
                  language="elambda"
                  extensions="elambda"/>

        <lang.parserDefinition
                language="elambda"
                implementationClass="com.github.lambdamix.elambda.ELambdaParserDefinition" />

        <localInspection
                language="elambda"
                shortName="Variables"
                displayName="ELambda variables"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.VariableInspection"/>
        <localInspection
                language="elambda"
                shortName="RemoteVariables"
                displayName="ELambda remote variables"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.RemoteVariableInspection"/>
        <localInspection
                language="elambda"
                shortName="TypeVariables"
                displayName="ELambda type variables"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.TypeVariableInspection"/>
        <localInspection
                language="elambda"
                shortName="TypeConstructors"
                displayName="ELambda type constructors"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.TypeConstructorInspection"/>
        <localInspection
                language="elambda"
                shortName="RemoteTypeConstructors"
                displayName="ELambda remote type constructors"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.RemoteTypeConstructorInspection"/>
        <localInspection
                language="elambda"
                shortName="Constructors"
                displayName="ELambda constructors"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.ConstructorExprInspection"/>
        <localInspection
                language="elambda"
                shortName="RemoteConstructors"
                displayName="ELambda remote constructors"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.RemoteConstructorExprInspection"/>
        <localInspection
                language="elambda"
                shortName="LocalPatterns"
                displayName="ELambda local patterns"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.LocalPatternInspection"/>
        <localInspection
                language="elambda"
                shortName="RemotePatterns"
                displayName="ELambda remote patterns"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.RemotePatternInspection"/>
        <localInspection
                language="elambda"
                shortName="References"
                displayName="ELambda references"
                groupName="ELambda"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.github.lambdamix.elambda.inspection.ReferenceInspection"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>
